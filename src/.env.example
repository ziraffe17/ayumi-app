# ========================================
# AYUMI - 福祉事業所向け通所管理システム
# ========================================

# --- Application ---
APP_NAME="AYUMI"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

APP_LOCALE=ja
APP_TIMEZONE=Asia/Tokyo
APP_FALLBACK_LOCALE=en

APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

# --- Logging ---
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# --- Database ---
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=tsusho
DB_USERNAME=tsusho_user
DB_PASSWORD=

# --- Cache & Session ---
CACHE_STORE=redis
CACHE_PREFIX=ayumi_cache

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# --- Queue ---
QUEUE_CONNECTION=redis

# --- Redis ---
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# --- Mail ---
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# --- Fortify (認証) ---
FORTIFY_HOME=/staff/home
FORTIFY_USERNAME=email

# --- 2FA Settings ---
TWO_FACTOR_CODE_LENGTH=6
TWO_FACTOR_CODE_EXPIRES=10

# --- Audit Log ---
# 監査ログを有効化する場合は、ルートにauditミドルウェアを追加してください
AUDIT_ENABLED=false

# --- Rate Limiting ---
# API レート制限（1分あたりのリクエスト数）
RATE_LIMIT_API=60
RATE_LIMIT_LOGIN=5

# --- Backup ---
BACKUP_DISK=local

# --- Broadcasting ---
BROADCAST_CONNECTION=log

# --- Filesystem ---
FILESYSTEM_DISK=local

# --- Memcached ---
MEMCACHED_HOST=127.0.0.1

# --- AWS (使用する場合) ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-northeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# --- Vite ---
VITE_APP_NAME="${APP_NAME}"
